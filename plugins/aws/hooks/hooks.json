{
  "hooks": [
    {
      "name": "check-aws-credentials",
      "description": "Prevent committing hardcoded AWS access keys, secret keys, and session tokens",
      "event": "pre-commit",
      "command": "bash ./scripts/check-aws-credentials.sh",
      "filePattern": ["**/*.ts", "**/*.js", "**/*.py", "**/*.json", "**/*.yaml", "**/*.yml", "**/*.env", "**/*.tf", "**/*.hcl"],
      "excludePattern": ["**/node_modules/**", "**/.git/**", "**/dist/**", "**/build/**"],
      "enabled": true,
      "failOnError": true
    }
  ]
}
