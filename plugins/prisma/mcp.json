{
  "$schema": "https://cursor.com/schemas/mcp.json",
  "mcpServers": {
    "prisma": {
      "command": "npx",
      "args": ["-y", "prisma-mcp-server", "--early-access"],
      "description": "Prisma MCP server for database introspection, schema management, and migration operations",
      "env": {
        "DATABASE_URL": "${env:DATABASE_URL}"
      },
      "capabilities": [
        "schema-introspection",
        "migration-management",
        "query-execution",
        "database-health-check"
      ]
    }
  }
}
